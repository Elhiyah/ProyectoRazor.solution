<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Razor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_Razor.styles.css" asp-append-version="true" />
    <style>
        /* Estilos personalizados */
        .navbar-nav .nav-link {
            color: #fff !important;
            font-weight: 500;
            margin-right: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700 !important;
            }

        .navbar-brand {
            font-size: 1.5rem;
            color: #ffd700 !important;
        }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 20px 0;
        }

            .footer a {
                color: #ffd700;
            }

                .footer a:hover {
                    color: #fff;
                }
    </style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Proyecto_Razor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/About">Acerca de</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Services">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Contact">Contactos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Testimonials">Testimonios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container text-center">
            <p>&copy; 2024 - Proyecto_Razor - <a asp-area="" asp-page="/Privacy">Privacidad</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
